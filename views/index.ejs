<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>国际邮轮度假中心  特别推荐</title>
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/cruiseLiner.css" rel="stylesheet" type="text/css">
    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready( function() {
            $('.recomScanTitle').click(function(){
                if($('.recomScan').is(':hidden')){
                    $('.recomScan').show();
                    $('.arrowdown').removeClass('arrowdown').addClass('arrowup');
                }else{
                    $('.recomScan').hide();
                    $('.arrowup').removeClass('arrowup').addClass('arrowdown');
                }
            })
        });
    </script>
</head>

<body>
<!--标题-->
<div class="title01">
    <i class="centerico01"></i><span>国际邮轮度假中心</span><span class="centerli">程彬彬</span><span class="centerli">18021004303</span>
</div>
<!--内容部分-->
<div class="cont01">
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="images/adv01.jpg" alt="...">
            </div>
            <div class="item">
                <img src="images/adv02.jpg" alt="...">
            </div>
            <div class="item">
                <img src="images/adv03.jpg" alt="...">
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <!--特别推荐标题-->
    <div class="recomTitleBox"><a href="#" class="searchLink">搜索更多航次</a>特别推荐</div>
</div>
<!--切换部分-->
<div class="recomBox">
    <div role="tabpanel">

        <!-- Nav tabs -->
        <ul class="nav nav-tabs recomnav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#PreferentialRoutes" aria-controls="PreferentialRoutes" role="tab" data-toggle="tab">特惠线路</a></li>
            <li role="presentation"><a href="#routeFeature" aria-controls="routeFeature" role="tab" data-toggle="tab">荟邮优选</a></li>
            <li role="presentation"><a href="#EarlyPreferential" aria-controls="EarlyPreferential" role="tab" data-toggle="tab">早定优惠</a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content recomtab-content ">
            <div role="tabpanel" class="tab-pane active" id="PreferentialRoutes">
                <!--1-->
                <%products.forEach(function(p){if(p.isCheap==1){%>
                <a href="/detail/<%=p.id%>" style="text-decoration:none;">
                    <div class="recomListBox">
                        <div class="titlebox">
                            <h5><%=p.productTitle%></h5>
                            <h6><%=p.shipName%></h6>
                            <div class="pricebox"><p class="price">￥<%=p.startingPrice%></p><p>起</p></div>
                        </div>
                        <div class="infocon">
                            <%=p.route%>
                            <div class="icon"><%=p.productType==1?'单船票':'团队游'%></div>
                        </div>
                    </div>
                </a>
                <%}});%>
            </div>
            <div role="tabpanel" class="tab-pane" id="routeFeature">
                <!--1-->
                <%products.forEach(function(p){if(p.isSpecial==1){%>
                <a href="/detail/<%=p.id%>" style="text-decoration:none;">
                    <div class="recomListBox">
                        <div class="titlebox">
                            <h5><%=p.productTitle%></h5>
                            <h6><%=p.shipName%></h6>
                            <div class="pricebox"><p class="price">￥<%=p.startingPrice%></p><p>起</p></div>
                        </div>
                        <div class="infocon">
                            <%=p.route%>
                            <div class="icon"><%=p.productType==1?'单船票':'团队游'%></div>
                        </div>
                    </div>
                </a>
                <%}});%>
            </div>
            <div role="tabpanel" class="tab-pane" id="EarlyPreferential">
                <!--1-->
                <%products.forEach(function(p){if(p.isEarlyBooking==1){%>
                <a href="/detail/<%=p.id%>" style="text-decoration:none;">
                    <div class="recomListBox">
                        <div class="titlebox">
                            <h5><%=p.productTitle%></h5>
                            <h6><%=p.shipName%></h6>
                            <div class="pricebox"><p class="price">￥<%=p.startingPrice%></p><p>起</p></div>
                        </div>
                        <div class="infocon">
                            <%=p.route%>
                            <div class="icon"><%=p.productType==1?'单船票':'团队游'%></div>
                        </div>
                    </div>
                </a>
                <%}});%>
            </div>
        </div>

    </div>
</div>
<a href="#" class="recomflexphone"></a>
</body>
</html>
